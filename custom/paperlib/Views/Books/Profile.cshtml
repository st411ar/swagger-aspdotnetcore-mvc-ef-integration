@model IO.Swagger.Model.Book

@if (Model != null) {
	<h2>@Model.Name</h2>
	<p>Owner:
		<a asp-area=""
				asp-controller="Users"
				asp-action="Profile"
				asp-route-id="@Model.Owner.Id"
		>
			@Model.Owner.Name
		</a>
	</p>
	<p>Reader:
		@if (Model.Reader != null) {
			<a asp-area=""
					asp-controller="Users"
					asp-action="Profile"
					asp-route-id="@Model.Reader.Id"
			>
				@Model.Reader.Name
			</a>
		}
		else
		{
			<span class="label label-success">free</span>
		}
	</p>
} else {
	<h2>Such book doesn't exist</h2>	
}
