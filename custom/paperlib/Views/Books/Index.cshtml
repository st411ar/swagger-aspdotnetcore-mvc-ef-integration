@model IEnumerable<IO.Swagger.Model.Book>

@{
    ViewData["Title"] = "Books";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<table class="table">
	<tr>
		<th>id</th>
		<th>name</th>
		<th>owner id</th>
		<th>owner</th>
		<th>reader id</th>
		<th>reader</th>
	</tr>
	@foreach (var book in Model) {
		<tr>
			<td>@book.Id</td>
			<td>
				<a asp-area=""
						asp-controller="Books"
						asp-action="Profile"
						asp-route-id="@book.Id"
				>
					@book.Name
				</a>
			</td>
			<td>@book.OwnerId</td>
			<td>
				<a asp-area=""
						asp-controller="Users"
						asp-action="Profile"
						asp-route-id="@book.Owner.Id"
				>
					@book.Owner.Name
				</a>
			</td>
			<td>@book.ReaderId</td>
			<td>
				@if (book.Reader != null) {
					<a asp-area=""
							asp-controller="Users"
							asp-action="Profile"
							asp-route-id="@book.Reader.Id"
					>
						@book.Reader.Name
					</a>
				}
			</td>
		</tr>
	}
</table>
