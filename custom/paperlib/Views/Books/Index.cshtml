@model IEnumerable<IO.Swagger.Model.Book>

<h2>Books</h2>
<table class="table">
	<tr>
		<th>book</th>
		<th>owner</th>
		<th>reader</th>
	</tr>
	@foreach (var book in Model) {
		<tr>
			<td>
				<a asp-area=""
						asp-controller="Books"
						asp-action="Profile"
						asp-route-id="@book.Id"
				>
					@book.Name
				</a>
			</td>
			<td>
				<a asp-area=""
						asp-controller="Users"
						asp-action="Profile"
						asp-route-id="@book.Owner.Id"
				>
					@book.Owner.Name
				</a>
			</td>
			<td>
				@if (book.Reader != null) {
					<a asp-area=""
							asp-controller="Users"
							asp-action="Profile"
							asp-route-id="@book.Reader.Id"
					>
						@book.Reader.Name
					</a>
				}
			</td>
		</tr>
	}
</table>
